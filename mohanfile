pipeline {
    agent any
 
    stages {
        stage('Git Checkout Code') {
            steps {
                sh '''
             
                cd actions
                git pull
                ls -l
                    '''
            }
        }
        stage("displaying the files"){
            steps{
                sh '''
                
                cd python-testing
                git pull
                ls -l'''
                
            }
        }
        stage("performing the testcases "){
            steps{
                sh'''
                ls  -l
                pytest python-testing/tests'''
            }
        }
        stage("perform the unit testing"){
            steps{
                sh '''
                pytest python-testing/unit_test'''
            }
        }
        stage("docker stages"){
            steps{
                sh '''
                sudo docker ps '''
            }
        }
    }
}

