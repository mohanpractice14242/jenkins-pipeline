pipeline {
    agent any
 
    stages {
        stage('Git Checkout Code') {
            steps {
                sh '''
                
                cd actions
                git pull
                ls -l
                    '''
            }
        }
        stage("displaying the files"){
            steps{
                sh '''
                
                cd python-testing
                git pull
                ls -l'''
                
            }
        }

        stage('Build') {
            steps {
                script {
                    def result = sh(script: 'pylint actions/src/main.py', returnStatus: true)
            
                    if (result != 0) {
                        error "Pylint issues found. Failing the build."
                    } else {
                        echo "Pylint checks passed."
               }
            }
           }
        }
        stage("perform the lint code in python using flask8"){
            steps{
                script{
                def result=sh(script: 'flake8 actions/src/main.py',returnStatus: true)
                if(result !=0){
                    error "flake8 issues found please write the code on agaun"
                }else{
                    echo "flake8 test is sucess"
                }
                }
            }
                
            }
        stage("performing the testcases "){
            steps{
                sh'''
                ls  -l
                pytest python-testing/tests'''
            }
        }
        stage("perform the unit testing"){
            steps{
                sh '''
                pytest python-testing/unit_test'''
            }
        }

        }

        stage("docker stages"){
            steps{
                sh '''
                docker ps '''
            }
        }
    }

