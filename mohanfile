pipeline {
    agent {
     docker {
            image 'python:3.8'
            args '-u root'
        }
    }
    stages {
        stage('Git Checkout Code') {
            steps {
                sh '''
                
                cd actions
                git pull
                ls -l
                    '''
            }
        }
        stage("displaying the files"){
            steps{
                sh '''
                cd python-testing
                git pull
                ls -l'''
                
            }
        }
        stage("installing the python "){
            steps{
                sh '''
                pip install -r requirements.txt
                
                 '''
            }
        }
        stage("installing the dependencies"){
            steps{
                sh '''
                ls -l
                '''
            }
        }
    }
}
